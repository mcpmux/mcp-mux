{
  "name": "mcpmux",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "pwsh -ExecutionPolicy Bypass -File scripts/setup-dev.ps1",
    "dev": "pnpm --filter @mcpmux/desktop dev",
    "build": "pnpm --filter @mcpmux/desktop build",
    "changeset": "changeset",
    "version": "changeset version",
    "release:key": "pnpm --filter @mcpmux/desktop tauri signer generate -w ~/.tauri/mcpmux.key",
    "test": "pnpm test:rust && pnpm test:ts",
    "test:rust": "cargo nextest run --workspace",
    "test:rust:unit": "cargo nextest run --workspace --lib",
    "test:rust:int": "cargo nextest run -p tests",
    "test:rust:doc": "cargo test --workspace --doc",
    "test:ts": "vitest run -c tests/ts/vitest.config.ts",
    "test:ts:watch": "vitest -c tests/ts/vitest.config.ts",
    "test:e2e": "pnpm exec wdio run tests/e2e/wdio.conf.ts",
    "test:e2e:web": "pnpm exec playwright test -c tests/e2e/playwright.config.ts",
    "test:e2e:web:headed": "pnpm exec playwright test -c tests/e2e/playwright.config.ts --headed",
    "test:ci": "pnpm test",
    "test:coverage": "cargo llvm-cov --workspace --html && vitest run -c tests/ts/vitest.config.ts --coverage",
    "lint": "pnpm -r lint && cargo clippy --workspace -- -D warnings",
    "lint:fix": "pnpm -r lint:fix && cargo clippy --workspace --fix --allow-dirty",
    "format": "prettier --write . && cargo fmt --all",
    "format:check": "prettier --check . && cargo fmt --all --check",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && cargo clean"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@wdio/cli": "^9.0.0",
    "@wdio/local-runner": "^9.0.0",
    "@wdio/mocha-framework": "^9.0.0",
    "@wdio/spec-reporter": "^9.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.1"
}
